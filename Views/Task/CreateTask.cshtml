@model TM2.Models.Tasks
@{
    ViewBag.Title = "Create Task";
    Layout = "~/Views/Shared/_TaskLayout.cshtml";
}
<div class="task-container">
    <div class="task-box">
    <h1>New Task</h1>
        <form method="post" asp-controller="Task" asp-action="CreateTask">
            <div class="form-group mb-3">
                   <label asp-for="Name"></label>
                   <input asp-for="Name" class="form-control" />
                   
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                
            </div>
            <div class="form-group mb-3">
                <label asp-for="DueTime">Due Time:</label>
                <input type="datetime-local" id="DueTime" name="DueTime"
                       value="@Model.DueTime.ToString("yyyy-MM-ddTHH:mm")" />
            </div>

            <div class="form-group">
                <label>Add Collaborators by Email </label>
                <input type="text" id="collaboratorEmails" name="collaboratorEmails" class="form-control" placeholder="Enter emails separated by commas" />
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Add Task</button>
                <a asp-controller="Home" asp-action="Task" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>
