@model TM2.Models.Tasks
@{
    ViewBag.Title = "Create Task";
}
<h1>Here you can create your task.</h1>
<form method="post" asp-controller="Task" asp-action="CreateTask">
    <div class="form-group mb-3">
           <label asp-for="Name"></label>
           <input asp-for="Name" class="form-control" />
           <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="DueTime">Due Time:</label>
        <input type="datetime-local" id="DueTime" name="DueTime"
               value="@Model.DueTime.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Add Task</button>
        <a asp-controller="Task" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>

